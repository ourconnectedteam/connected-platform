{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": [
            "warn",
            {
                "allow": [
                    "error",
                    "warn"
                ]
            }
        ],
        "no-unused-vars": "warn",
        "prefer-const": "error",
        "no-var": "error"
    }
}